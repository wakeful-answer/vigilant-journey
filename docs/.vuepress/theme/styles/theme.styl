#app
  height 100%
  width 100%

.content__default
  padding 2rem 3rem 0 3rem
  margin 3rem 0
  +mobile()
    margin 0
    padding 0

.theme-container
  height 100%
  margin-top 4rem

.content-container
  min-height 300px
  margin-top 10rem
  max-width 960px
  margin auto
  padding 20px
  height 100%
  position relative
  +tablet()
    padding 2rem
  +mobile()
    min-height 200px
    margin-top 6.5rem
    padding 20px

.event-container
  margin-top 10rem
  +tablet()
    margin-top 7rem
  +mobile()
    margin-top 0

.event-description
  min-width 50%
  max-width 50%
  padding-right 1.5rem
  +mobile()
    min-width 100%
    max-width 100%

.event-images
  margin-top 1rem
  min-width 50%
  max-width 50%
  margin-right 2rem
  +tablet()
    margin-top -1.5rem
  +mobile()
    min-width 100%
    max-width 100%
  .slider-container
    margin-right 1.5rem
    +mobile()
      margin-right 0

.event-artists
  color #000
  font-size 10pt

.event-artist
  padding 1rem
  display inline-block
  margin 0 1rem 1rem 0
  +mobile()
    padding 0.5rem

.event-block
  padding 2rem 0 2rem
  display flex
  +mobile()
    flex-direction column-reverse

.event-details
  text-transform uppercase
  li
    margin-bottom .2rem

.page-title
  position absolute
  +mobile()
    position initial
    line-height 0.4rem
  h1
    display inline-block
    font-size 2rem
  img
    height 1.5rem
    display inline-block
    margin-left 10px

.program-page-title
  font-size 4rem
  position absolute
  margin-top 4rem
  +tablet()
    font-size 3rem
  +mobile()
    margin-top 0
    font-size 3rem
    position initial
  h1
    display inline-block
  .date
    display inline-block
    margin-left 10rem
    +tablet()
      margin-left 8rem
    +mobile()
      margin-left 5rem
  .big-arrow
    display inline-block
    margin-left 2rem
    transform rotate(90deg)
    +tablet()
      margin-left 1rem
    +mobile()
      height 3rem

.big-arrow
  height 7rem
  position absolute
  margin-top -1.5rem
  margin-left 4rem
  +mobile()
    margin-left 2rem
    height 2rem
    margin-top 0

.logo-link
  width 50px
  position absolute
  left 2rem
  top 1.5rem
  +tablet()
    top 1.8rem
    left 1.8rem
    width 30px
  +mobile()
    top 1rem
    left initial
    right 1rem
    width 20px


.list
  margin 0
  text-indent 0
  list-style-type none
  padding-left 0
  li a
    text-decoration none
    color #fff

.program-links
  margin-top 5rem
  font-size 5rem
  position absolute
  +mobile()
    font-size 2rem
    overflow-x hidden
  .big-arrow
    visibility hidden
  li:hover .big-arrow
    visibility visible

.cls-1
  &.concerts
    fill $metallic-blue
  &.special-programs
    fill $metallic-silver
  &.market
    fill $metallic-brown
  &.film-screening
    fill $metallic-pink
  &.exhibition
    fill $metallic-gold
  &.residency
    fill $copper
  &.talks
    fill $metallic-blue-green
  &.workshops
    fill $metallic-green

.program-links
  .concerts:hover
    color $metallic-blue
  .special-programs:hover
    color $metallic-silver
  .market:hover
    color $metallic-brown
  .film-screening:hover
    color $metallic-pink
  .exhibition:hover
    color $metallic-gold
  .residency:hover
    color $copper
  .talks:hover
    color $metallic-blue-green
  .workshops:hover
    color $metallic-green

.program-page-title
  &.concerts
    color $metallic-blue
  &.special-programs
    color $metallic-silver
  &.market
    color $metallic-brown
  &.film-screening
    color $metallic-pink
  &.exhibition
    color $metallic-gold
  &.residency
    color $copper
  &.talks
    color $metallic-blue-green
  &.workshops
    color $metallic-green

.concerts
  .event-artist
    background-color $metallic-blue
.special-programs
  .event-artist
    background-color $metallic-silver
.market
  .event-artist
    background-color $metallic-brown
.film-screening
  .event-artist
    background-color $metallic-pink
.exhibition
  .event-artist
    background-color $metallic-gold
.residency
  .event-artist
    background-color $copper
.talks
  .event-artist
    background-color $metallic-blue-green
.workshops
  .event-artist
    background-color $metallic-green

