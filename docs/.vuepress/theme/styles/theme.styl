$metallic-gold = #B3A16E
$copper = #BF873C
$metallic-silver = #B2B2B2
$metallic-pink = #C199A0
$metallic-blue = #A5BECD
$metallic-blue-green = #92B4AF
$metallic-green = #B0BDA2
$metallic-brown = #CCB198

mobile()
  @media (max-width: 731px)
    {block}

tablet()
  @media (max-width: 1024px)
    {block}

desktop()
  @media (max-width: 1200px)
    {block}

html, body
  padding 0
  margin 0

body
  font-family "Lausanne", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color #fff
  background-color #000
  height 100%
  width 100%

h1,h2,h3,h4,h5,.list,.program-page-title
  text-transform uppercase
  font-weight normal

p
  line-height: 1.4rem

a
  color #fff

#app
  height 100%
  width 100%

.content__default
  padding 2rem 3rem 0 3rem
  margin 3rem 0

.theme-container
  height 100%
  margin-top 4rem

.content-container
  min-height 300px
  margin-top 10rem
  max-width 960px
  margin auto
  padding 20px
  height 100%
  position relative

.event-container
  margin-top 10rem
  +tablet()
    margin-top 7rem

.event-description
  min-width 50%
  max-width 50%
  padding-right 1.5rem

.event-images
  margin-top 1rem
  min-width 50%
  max-width 50%
  margin-right 2rem
  +tablet()
    margin-top -1.5rem
  .slider-container
    margin-right 1.5rem

.event-artists
  color #000
  font-size 10pt

.event-artist
  padding 1rem
  display inline-block
  margin 0 1rem 1rem 0

.event-block
  padding 2rem 0 2rem
  display flex

.event-details
  text-transform uppercase
  li
    margin-bottom .2rem

.page-title
  position absolute
  h1
    display inline-block
    font-size 2rem
  img
    height 1.5rem
    display inline-block
    margin-left 10px

.program-page-title
  font-size 4rem
  position absolute
  margin-top 4rem
  +tablet()
    font-size 3rem
  h1
    display inline-block
  .date
    display inline-block
    margin-left 10rem
    +tablet()
      margin-left 8rem
  .big-arrow
    display inline-block
    margin-left 2rem
    transform rotate(90deg)
    +tablet()
      margin-left 1rem

.logo-link
  width 50px
  position absolute
  left 1rem
  top 1rem
  +tablet()
    top 1.2rem
    left 1.5rem
    width 30px

.list
  margin .5rem 0
  padding 0
  text-indent 0
  list-style-type none
  li a
    text-decoration none
    color #fff

.program-links
  margin-top 5rem
  font-size 5rem
  position absolute
  // +tablet()
  //   font-size 4rem
  .big-arrow
    visibility hidden
  li:hover .big-arrow
    visibility visible

.big-arrow
  height 7rem
  position absolute
  margin-top -1.5rem
  margin-left 4rem

.cls-1
  &.concerts
    fill $metallic-blue
  &.special-programs
    fill $metallic-silver
  &.market
    fill $metallic-brown
  &.film-screening
    fill $metallic-pink
  &.exhibition
    fill $metallic-gold
  &.residency
    fill $copper
  &.talks
    fill $metallic-blue-green
  &.workshops
    fill $metallic-green

.program-links
  .concerts:hover
    color $metallic-blue
  .special-programs:hover
    color $metallic-silver
  .market:hover
    color $metallic-brown
  .film-screening:hover
    color $metallic-pink
  .exhibition:hover
    color $metallic-gold
  .residency:hover
    color $copper
  .talks:hover
    color $metallic-blue-green
  .workshops:hover
    color $metallic-green

.program-page-title
  &.concerts
    color $metallic-blue
  &.special-programs
    color $metallic-silver
  &.market
    color $metallic-brown
  &.film-screening
    color $metallic-pink
  &.exhibition
    color $metallic-gold
  &.residency
    color $copper
  &.talks
    color $metallic-blue-green
  &.workshops
    color $metallic-green

.concerts
  .event-artist
    background-color $metallic-blue
.special-programs
  .event-artist
    background-color $metallic-silver
.market
  .event-artist
    background-color $metallic-brown
.film-screening
  .event-artist
    background-color $metallic-pink
.exhibition
  .event-artist
    background-color $metallic-gold
.residency
  .event-artist
    background-color $copper
.talks
  .event-artist
    background-color $metallic-blue-green
.workshops
  .event-artist
    background-color $metallic-green

.nav-bar
  text-align center
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  box-sizing border-box
  +tablet()
    display none

.nusa-link
  width 70px
  +mobile()
    width 40px

.bg-black
  background-color #000

.nav-bar, footer
  li
    padding 15px 15px 15px 0
    display inline-block
    // +mobile()
    //   padding
    &:hover .underline
      padding-bottom 10px
      border-bottom 1px solid #fff
    img
      margin-left 10px
      // +mobile()
      //   margin-left 5px

.arrow-link
  width 25px
  +mobile()
    display none

footer
  text-align center
  position relative
  z-index 20
  bottom 0
  left 0
  right 0
  box-sizing border-box
  .text-center,ul
    display inline-block

.partner-logos
  width 700px
  margin auto
  margin-bottom 2rem

.partner-logos .logo
  width 60px
  display inline-block
  vertical-align middle
  margin 1rem
  img
    max-width 50px
    max-height 45px

.text-center
  text-align center

iframe
  width 100%

#three-canvas
  z-index -1000
  width 100%
  height 100%
  top 0
  position fixed
  overflow hidden
  transition opacity 0.5s ease

.opacitydown
  opacity .3

.wsk-logo
  width 300px
  margin auto

.frontpage-logo, .subtitle
  z-index 1000

.frontpage-logo
  width 150px
  position absolute
  top 1.3rem
  right 1rem
  padding 0
  +tablet()
    left 2rem
    width 10rem
    top 2rem
  +mobile()
    top 1rem
    left 1rem
    width 6rem


.subtitle
  position absolute
  top 0.8rem
  left 1rem
  font-size 18pt
  padding 0
  span
    display block
  +tablet()
    top 6rem
    left 2rem
    font-size 2rem
  +mobile()
    top 3.5rem
    left 0.8rem
    font-size 1.5rem

.tiny-slider-image, .nav-slider-image
  overflow hidden
  position relative
  img
    width 100%
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;


.tiny-slider-image
  height 300px

.nav-slider-image
  text-align center
  height 100px
  margin-top 1rem

.tns-outer
  display flex
  flex-direction column-reverse

.venues-container
  font-size 10pt
  overflow hidden
  display flex
  height 480px
  .google-maps-embed
    flex-grow 2
  .venue-info
    overflow scroll
    background-color #fff
    padding 2rem
    max-width 280px

.venue-title
  padding .8rem
  display inline-block
  background-color #000

.venue-desc
  margin 1rem 0 2rem 0
  padding-bottom 1rem
  color #000
