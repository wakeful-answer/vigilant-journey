$metallic-gold = #B3A16E
$copper = #BF873C
$metallic-silver = #B2B2B2
$metallic-pink = #C199A0
$metallic-blue = #A5BECD
$metallic-blue-green = #92B4AF
$metallic-green = #B0BDA2
$metallic-brown = #CCB198



html, body
  padding 0
  margin 0

body
  font-family "Lausanne", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color #fff
  background-color #000
  height 100%
  width 100%

h1,h2,h3,h4,h5,.list,.program-page-title
  text-transform uppercase
  font-weight normal

p
  line-height: 1.4rem

#app
  height 100%
  width 100%

.content__default
  padding 2rem 3rem 0 3rem
  margin-top 5em

.theme-container
  height 100%
  margin-top 4rem

.content-container
  margin-top 10rem
  max-width 960px
  margin auto
  padding 20px
  height 100%
  position relative

.event-container
  margin-top 10em

.event-description
  min-width 50%
  max-width 50%
  padding-right 1.5em

.event-images
  min-width 50%
  max-width 50%

.event-artists
  color #000
  font-size 10pt

.event-artist
  padding 1em
  display inline-block
  margin 0 1em 1em 0

.event-block
  padding 2em 0 2em
  display flex

.event-details
  text-transform uppercase
  li
    margin-bottom .2em

.page-title
  position absolute
  h1
    display inline-block
    font-size 2rem
  img
    height 1.5rem
    display inline-block
    margin-left 10px

.program-page-title
  font-size 4rem
  position absolute
  margin-top 1em
  h1
    display inline-block
  .date
    display inline-block
    margin-left 2.5em
  .big-arrow
    display inline-block
    margin-left 2rem
    transform rotate(90deg)

.arrow-link
  width 25px

.logo-link
  width 50px
  position absolute
  left 2em
  top 2em

.list
  margin 10 0 10 0
  padding 0
  text-indent 0
  list-style-type none
  li a
    text-decoration none
    color #fff

.program-links
  font-size 5rem
  position absolute
  .big-arrow
    visibility hidden
  li:hover .big-arrow
    visibility visible

.big-arrow
  height 7rem
  position absolute
  margin-top -1.5rem
  margin-left 4rem

.cls-1
  &.concerts
    fill $metallic-blue
  &.special-programs
    fill $metallic-silver
  &.market
    fill $metallic-brown
  &.film-screening
    fill $metallic-pink
  &.exhibition
    fill $metallic-gold
  &.residency
    fill $copper
  &.talks
    fill $metallic-blue-green
  &.workshops
    fill $metallic-green

.program-links
  .concerts:hover
    color $metallic-blue
  .special-programs:hover
    color $metallic-silver
  .market:hover
    color $metallic-brown
  .film-screening:hover
    color $metallic-pink
  .exhibition:hover
    color $metallic-gold
  .residency:hover
    color $copper
  .talks:hover
    color $metallic-blue-green
  .workshops:hover
    color $metallic-green

.program-page-title
  &.concerts
    color $metallic-blue
  &.special-programs
    color $metallic-silver
  &.market
    color $metallic-brown
  &.film-screening
    color $metallic-pink
  &.exhibition
    color $metallic-gold
  &.residency
    color $copper
  &.talks
    color $metallic-blue-green
  &.workshops
    color $metallic-green

.concerts
  .event-artist
    background-color $metallic-blue
.special-programs
  .event-artist
    background-color $metallic-silver
.market
  .event-artist
    background-color $metallic-brown
.film-screening
  .event-artist
    background-color $metallic-pink
.exhibition
  .event-artist
    background-color $metallic-gold
.residency
  .event-artist
    background-color $copper
.talks
  .event-artist
    background-color $metallic-blue-green
.workshops
  .event-artist
    background-color $metallic-green

.nav-bar
  text-align center
  position fixed
  z-index 20
  top 0
  left 0
  right 0
  box-sizing border-box

.nav-bar, footer
  li
    padding 15px 15px 15px 0
    display inline-block
    &:hover .underline
      padding-bottom 10px
      border-bottom 1px solid #fff
    img
      margin-left 10px

footer
  text-align center
  position relative
  z-index 20
  bottom 0
  left 0
  right 0
  box-sizing border-box
  .text-center,ul
    display inline-block

.text-center
  text-align center

iframe
  width 100%

#three-canvas
  z-index -1000
  width 100%
  height 100%
  top 0
  position fixed
  overflow hidden
  transition opacity 0.5s ease

.opacitydown
  opacity .3

.wsk-logo
  width 300px
  margin auto

.frontpage-logo
  width 200px
  position absolute
  top 0
  right 0
  padding 2em 3em 0 0

.subtitle
  position absolute
  top 0
  padding 1em 0 0 2em
  line-height .6em

.nusa-link
  width 70px

.tiny-slider-image, .nav-slider-image
  overflow hidden
  position relative
  img
    width 100%
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;


.tiny-slider-image
  height 300px

.nav-slider-image
  text-align center
  height 100px
  margin-top 1em

.tns-outer
  display flex
  flex-direction column-reverse
