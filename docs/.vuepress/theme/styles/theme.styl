.nusa-link
  width 70px
  margin-left 10px
  +mobile()
    width 50px
    margin-left 0


.bg-black
  background-color #000

.nav-bar, footer
  li
    padding 15px 15px 15px 0
    display inline-block
    +mobile()
      padding 5px 5px 5px 0
    &:hover .underline
      padding-bottom 10px
      border-bottom 1px solid #fff
      +mobile()
        padding-bottom 5px

footer
  +mobile()
    .list
      display block
  li:last-child
    margin-right -15px


.arrow-link
  width 25px
  +mobile()
    display none

footer
  text-align center
  position relative
  z-index 20
  bottom 0
  left 0
  right 0
  box-sizing border-box
  .text-center,ul
    display inline-block
  .text-center
    +mobile()
      padding 2em

.partner-logos
  width 700px
  margin auto
  margin-bottom 2rem
  +mobile()
    width 100%

.partner-logos .logo
  width 60px
  display inline-block
  vertical-align middle
  margin 1rem
  +mobile()
    margin 0.5rem
  img
    max-width 50px
    max-height 45px

.text-center
  text-align center

iframe
  width 100%

#three-canvas
  z-index -1000
  width 100%
  height 100%
  top 0
  position fixed
  overflow hidden
  transition opacity 0.5s ease
  max-width 100%

.opacitydown
  opacity .3

.wsk-logo
  width 300px
  margin auto
  +mobile()
    width 150px

.frontpage-logo, .subtitle
  z-index 2000

.frontpage-logo
  width 150px
  position absolute
  top 1.3rem
  right 1rem
  padding 0
  +tablet()
    top initial
    bottom 15.5rem
    left 4rem
    width 10rem
  +mobile()
    top initial
    bottom 10rem
    left 1.6rem
    width 8rem


.subtitle
  position absolute
  top 0.8rem
  left 1rem
  font-size 18pt
  padding 0
  span
    display block
  +tablet()
    top initial
    bottom 6rem
    left 4rem
    font-size 2.5rem
  +mobile()
    top initial
    bottom 3rem
    left 1.6rem
    font-size 2rem

.tiny-slider-image, .nav-slider-image
  overflow hidden
  position relative
  img
    width 100%
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    margin: auto;


.tiny-slider-image
  height 300px

.nav-slider-image
  text-align center
  height 100px
  margin-top 1rem

.tns-outer
  display flex
  flex-direction column-reverse

.venues-container
  font-size 10pt
  overflow hidden
  display flex
  height 480px
  border 1px solid #fff
  +mobile()
    height auto
    flex-direction column
    border none
  .google-maps-embed
    border 1px solid #fff
    flex-grow 2
  .venue-info
    overflow scroll
    background-color #fff
    padding 2rem
    max-width 280px
    +mobile()
      max-width 100%
      overflow visible

.venue-title
  padding .8rem
  display inline-block
  background-color #000

.venue-desc
  margin 1rem 0 2rem 0
  padding-bottom 1rem
  color #000
