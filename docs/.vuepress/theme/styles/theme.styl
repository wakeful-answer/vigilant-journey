$metallic-gold = #B3A16E
$copper = #BF873C
$metallic-silver = #B2B2B2
$metallic-pink = #C199A0
$metallic-blue = #A5BECD
$metallic-blue-green = #92B4AF
$metallic-green = #B0BDA2
$metallic-brown = #CCB198

mobile()
  @media (max-width: 731px)
    {block}

tablet()
  @media (max-width: 1024px)
    {block}

desktop()
  @media (max-width: 1200px)
    {block}

html, body
  padding 0
  margin 0

body
  font-family "Lausanne", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", sans-serif
  -webkit-font-smoothing antialiased
  -moz-osx-font-smoothing grayscale
  font-size 16px
  color #fff
  background-color #000
  height 100%
  width 100%
  +mobile()
    font-size 12pt

h1,h2,h3,h4,h5,.list,.program-page-title
  text-transform uppercase
  font-weight normal

p
  line-height: 1.4rem

a
  color #fff
  border none
  outline none
  color inherit
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)
  -webkit-tap-highlight-color transparent
  -webkit-user-select none
  -khtml-user-select none
  -moz-user-select none
  -ms-user-select none
   user-select none

